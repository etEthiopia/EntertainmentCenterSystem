                        Mode="PrimaryLight">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="Medal" Foreground="Goldenrod" VerticalAlignment="Center" Height="50" Width="50" Grid.Column="0" />
                                <Grid Grid.Column="1" HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Margin="0,10,0,0" HorizontalAlignment="Center" FontWeight="Light"
                                    Style="{StaticResource MaterialDesignBody1TextBlock}">
                                    Seagate Elements
                                    </TextBlock>
                                    <TextBlock Grid.Row="1" Margin="0,10,0,0" FontSize="15" HorizontalAlignment="Center"
                                        Style="{StaticResource MaterialDesignBody1TextBlock}">
                                        43 Items
                                    </TextBlock>

                                </Grid>
                                <StackPanel Grid.Column="1" Orientation="Vertical"  HorizontalAlignment="Right">
                                    <ToggleButton Margin="0,10,10,0" HorizontalAlignment="Center"
                                            Style="{StaticResource MaterialDesignActionAccentToggleButton}"
                                            ToolTip="MaterialDesignActionDarkToggleButton">
                                        <ToggleButton.Content>
