                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Margin="0,10,0,0" HorizontalAlignment="Center" FontWeight="Light"
                                    Style="{StaticResource MaterialDesignBody1TextBlock}">
                                    SandDisk Cruzer Blade 8 GB
                                    </TextBlock>
                                    <TextBlock Grid.Row="1" Margin="0,10,0,0" FontSize="15" HorizontalAlignment="Center"
                                        Style="{StaticResource MaterialDesignBody1TextBlock}">
                                        120 BIRR
                                    </TextBlock>

                                </Grid>
                                <StackPanel Grid.Column="1" Orientation="Vertical"  HorizontalAlignment="Right">
                                    <ToggleButton Margin="0,10,10,0" HorizontalAlignment="Center"
                                            Style="{StaticResource MaterialDesignActionAccentToggleButton}"
                                            ToolTip="MaterialDesignActionLightToggleButton">
                                        <ToggleButton.Content>
                                            <materialDesign:PackIcon
                                                    Kind="BellOffOutline" />
                                        </ToggleButton.Content>
                                        <materialDesign:ToggleButtonAssist.OnContent>
                                            <materialDesign:PackIcon 
                                                    Kind="BellRingOutline" />
                                        </materialDesign:ToggleButtonAssist.OnContent>
                                    </ToggleButton>
                                    <TextBlock FontSize="8" FontWeight="Light" HorizontalAlignment="Center" Margin="0,0,10,0"
                                        Style="{StaticResource MaterialDesignCaptionTextBlock}">
                                        Notify when
                                    </TextBlock>
                                    <TextBlock  FontSize="8" Margin="0,0,5,10" FontWeight="Light" HorizontalAlignment="Center" 
                                        Style="{StaticResource MaterialDesignCaptionTextBlock}">
                                         Customer comes
                                    </TextBlock>
                                </StackPanel>

