                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                Style="{StaticResource MaterialDesignHeadlineTextBlock}">
                In terms of Money
